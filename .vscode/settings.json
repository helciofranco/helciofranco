{
  "breadcrumbs.enabled": true,
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": false,
  "editor.fontFamily": "JetBrains Mono",
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": false,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "hidden",
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.gotoLocation.multipleDefinitions": "goto",
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, turbo.json, biome.json, .prettierrc, vercel.json, yarn.lock, .npmrc, .npmignore, .nvmrc, pnpm-*.yaml",
    "bunfig.toml": "bun.lockb, bun.lock, .bun-version",
    ".rustfmt.toml": "Cargo.lock, Cargo.toml, fuel-toolchain.toml",
    ".gitignore": ".dockerignore, .prettierignore",
    "README.md": "LICENSE"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "search.exclude": {
    "**/generated": true,
    "**/dist": true,
    "**/.next": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/public/storybook": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/.turbo/**": true
  },
  "window.commandCenter": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "Default Light Modern",
  "diffEditor.renderSideBySide": false,
  "workbench.editor.enablePreview": false,
  "extensions.ignoreRecommendations": true
}
